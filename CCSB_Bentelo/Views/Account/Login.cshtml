@model CCSB_Bentelo.Models.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="loginPage">
        <div class="loginContainer">

            <h2>Login</h2>
            <div class="row">
                <div class="loginForm1">
                    <section id="loginForm">
                        <form id="account" method="post" asp-action="Login" asp-controller="Account">
                            <h4>Gebruik je credentials om in te loggen</h4>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger">
                            </div>
                            <div class="form-group row">
                                <label class="col-md-2" asp-for="Email"></label>
                                <div class="col-md-10">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-2" asp-for="Password"></label> 
                                <div class="col-md-10">
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="loginButtons checkbox">
                                    <label asp-for="RememberMe" class="pr-4 pl-0">
                                        <input asp-for="RememberMe" />
                                    </label>Onthoud mij?
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="loginButtons">
                                    <input type="submit" value="Login" class="btn btn-success" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="loginButtons">
                                    <a asp-action="Register">Registreer</a>
                                </div>
                            </div>
                        </form>

                    </section>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


